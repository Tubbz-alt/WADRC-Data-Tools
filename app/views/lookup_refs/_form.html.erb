<%= form_for(@lookup_ref) do |f| %>
  <% if @lookup_ref.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@lookup_ref.errors.count, "error") %> prohibited this lookup_ref from being saved:</h2>

      <ul>
      <% @lookup_ref.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :ref_value %><br />
    <%= f.text_field :ref_value, :required => true %> <small>This is the value saved in the database.</small>
