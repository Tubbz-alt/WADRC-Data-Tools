<table  width="80%">

	<tr><td align="left" colspan="2"><h1>Editing question</h1></td>
   <% if @sp_qf.count > 0 %>
    <td align="right">
    	<table>
    	    <tr><td align="right" colspan="2"><small><B>Protocols and forms which use this Question.</B></small></td></tr>
	      <% @sp_qf.each do |r| %>
	        <tr><td align="right"><%=r.html_safe %></td></tr>
          <%end%>
      </table>
      </td></tr>
   <%else%>
     <td align="right"> There are no forms linked to protocols using this question.</td></tr>
   <%end%>
 </table>


<%= render 'form' %>

