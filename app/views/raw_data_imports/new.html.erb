<div id = "raw_data_imports">
	<div id = "visit-import-body">
		<h3>Import a new raw data directory:</h3>

		<%= form_tag :action => "create" do %>
		  <p>
		    <%= label :raw_data_import, :directory, "Directory" %><br />
		    <%= text_field :raw_data_import, :directory %>
		  </p>

		  <p>
		    <%= label :raw_data_import, :scan_procedure, "Is a member of Scan Procedure Group:" %><br />
		<% scan_procedure_array = (current_user.edit_low_scan_procedure_array).split(' ').map(&:to_i) %>
		    <%= collection_select :raw_data_import, :scan_procedure, ScanProcedure.where(" scan_procedures.id in (?)",scan_procedure_array).all.sort_by(&:codename), :codename, :codename %>
		  </p>

		  <p>
		    <%= submit_tag "Import!", :disable_with => "Importing.  Please wait..." %>
		  </p>
		<% end %>
	</div>
	<hr>
	<div id="recent-imports-sidebar" >
		<h3>Recently Imported Visit Directories:</h3>
		<ul>
			<% for visit in @recent_visits %>
				<li><%= visit.path %><%= " by #{visit.created_by.login}" if visit.created_by %><%= " on #{visit.created_at.to_formatted_s(:datetime_daymonthweek)}" %></li>
			<% end %>
		</ul>
	</div>

	
</div>