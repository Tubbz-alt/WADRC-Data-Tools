      <%= text_area( :appointment,:comment,:value=>@appointment.comment ) %><br />
    </p>
    <%= @petscan.petscan_note.try(:html_safe)%>
  </div>

  <br style="clear:both" />

  <%= f.submit 'Save Petscan appt' %>

<% end %>

</div>