<h1>New recruitment group</h1>

<%= form_for(@recruitment_group) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :study %><br />
    <%= collection_select :recruitment_group, :study_id, Study.all, :id, :name, :include_blank => 'Select a study' %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', recruitment_groups_path %>
