<%  v_y_n = {"Y"=>"Y","N"=>"N"} %>
<% form_for(@directory) do |f| %>
<% if @directory.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@directory.errors.count, "error") %> prohibited this directory from being saved:</h2>

    <ul>
    <% @directory.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

  <div class="field">
    <%= f.label :path %><br />
    <%= f.text_field :path %>
  </div>
  <div class="field">
    <%= f.label :label %><br />
    <%= f.text_field :label %>
  </div>
  <div class="field">
    <%= f.label :display_order %><br />
    <%= f.text_field :position %>
  </div>
  <div class="field">
    <%= f.label :status %><br />
    <%= f.select :status_flag, v_y_n, :selected =>   @directory.status_flag   %> 
  </div>
  <div class="field">
    <%= f.label :check_secondary_directories %><br />
    <%= f.select :drill_down_flag, v_y_n, :selected =>   @directory.drill_down_flag   %> 
  </div><br>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>