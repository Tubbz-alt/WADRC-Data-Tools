<% if current_user.role == 'Admin_High'%>

<h1>Listing lookup_sources</h1>

<table>
  <tr>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @lookup_sources.each do |lookup_source| %>
  <tr>
    <td><%= lookup_source.description %></td>
    <td><%= link_to 'Show', lookup_source %></td>
    <td><%= link_to 'Edit', edit_lookup_source_path(lookup_source) %></td>
    <td><%= link_to 'Destroy', lookup_source, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Lookup source', new_lookup_source_path %>

<% else %>
  Your <%= current_user.role %> role does not allow access. 
<% end %>